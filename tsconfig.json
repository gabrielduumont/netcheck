{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["ES2022", "DOM"],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@app/*": ["src/*"]
    },
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths"
      }
    ]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
